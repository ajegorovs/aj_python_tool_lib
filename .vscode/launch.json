    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceRoot}", //"${fileDirname}", // workspaceRoot for non-jupyter vscode launch so i can import from root
            "env": {
                "PYTHONPATH": "${workspaceRoot}",  //  "${workspaceRoot}"${workspaceFolder}
            }
        }
    ]
    
}